<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ramiro.ernesto.qizit.SignupActivity"
    android:background="@drawable/background_fill">
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent"
        android:contentDescription="@string/backimage_description"
        android:scaleType="fitStart"
        android:background="@drawable/background"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true" />



    <TextView
        android:id="@+id/title"
        android:text="@string/app_name"
        style="@style/MyTextView" />

    <TextView
        android:id="@+id/subtitle"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/title"
        android:text="@string/subtitle_string"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="false"
        android:layout_marginTop="0dp" />

    <LinearLayout
        android:id="@+id/keysLayout"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle"
        android:paddingLeft="@dimen/login_horizontal_padding"
        android:paddingTop="@dimen/login_vertical_padding"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/login_vertical_padding"
        android:layout_marginTop="@dimen/login_vertical_margin"
        android:paddingRight="@dimen/login_horizontal_padding">

    <EditText
        android:id="@+id/usernamefield"
        android:hint="@string/username_hint"
        tools:focusable="false"
        android:layout_alignParentLeft="true"
        android:textSize="17sp"
        android:textColorHint="@color/light_grey"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle"
        android:layout_width="match_parent">
        <requestFocus/>
    </EditText>


    <EditText
        android:id="@+id/passwordfield"
        android:hint="@string/password_hint"
        android:inputType="textPassword"

        android:layout_alignParentLeft="true"
        android:textSize="17sp"
        android:textColorHint="@color/light_grey"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle"
        android:layout_width="match_parent" />

    <EditText
        android:id="@+id/emailfield"
         android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:layout_alignParentLeft="true"
        android:textSize="17sp"
        android:textColorHint="@color/light_grey"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle"
        android:layout_width="match_parent" />

    </LinearLayout>

<ImageView
    android:id="@+id/buttonDivider"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/keysLayout"
    android:layout_centerHorizontal="true"
    android:src="@drawable/button_divider"
    android:contentDescription="@string/buttonDivider"/>

    <Button
        android:id="@+id/signupbutton"
        android:text="@string/signup_button_label"
        android:layout_below="@+id/keysLayout"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/buttonDivider"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textSize="13sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/button_custom"
        android:textColor="@color/textColor" />

    <Button
        android:id="@+id/cancelbutton"
        android:text="@string/cancel_button_label"
        android:layout_below="@+id/keysLayout"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/buttonDivider"
        android:layout_marginLeft="0dp"

        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textSize="13sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/button_custom"
        android:textColor="@color/textColor" />
</RelativeLayout>
